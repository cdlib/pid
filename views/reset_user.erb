<section id="user_login">
	<h3>Change your password</h3>
	
	<form action="/user/reset" method="post">
		<label>Current Password:</label><input type="password" name="old_pwd" id="old_pwd" />
		<label>New Password:</label><input type="password" name="old_pwd" id="old_pwd" />
		<label>Confirm:</label><input type="password" name="old_pwd" id="old_pwd" />
