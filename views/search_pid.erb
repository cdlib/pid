<section id="search_criteria">
  <h3><%= form_text('header_search_criteria') %></h3>
  
  <form action="/link/search" method="post">
    <label><%= form_text('form_url') %></label><input type="text" id="url" name="url" style="width: 350px;" value="<%= params[:url] %>" />
    
    <label>&nbsp;</label><input type="submit" name="<%= form_text('button_search') %>" />
  </form>
	
	<article><%= form_text('search_text') %></article>
  
</section>

<% if request.request_method == "POST" %>
  
  <section id="search_results">
    <h3><%= form_text('header_search_results') %></h3>
    
    <% i = 1 %>
    <% unless @results.empty? %>
      <table>
        <tr><th /><th><%= form_text('th_pid') %></th><th><%= form_text('th_url') %></th><th><%= form_text('th_userid') %></th>
						<th><%= form_text('th_modified_date') %></th><th><%= form_text('th_active') %></th></tr>
        <% @results.each do |result| %>
          <tr>
            <td><%= i %>)</td>
            <td>
              <a href="/link/<%= result.id %>" class="letterpress"><%= result.id %></a>
            </td>
            <td><a href="<%= result.url %>" target="_blank" class="underline" title="<%= result.url %>">
																<%= (result.url.size > 80) ? result.url.slice(0, 79) + ' ...' : result.url %></a></td>
            <td><%= result.username %></td>
            <td><%= result.modified_at.strftime("%m/%d/%Y") %></td>
            <td class="center"><%= (result.deactivated) ? "No" : "Yes" %></td>
          </tr>
          
          <% i = i.next %>
        <% end %>
      </table>
      
    <% else %>
      <article id="no_results"><%= form_text('search_no_matches') %></article>
    <% end %>
  </section>

<% end %>

