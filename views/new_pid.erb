<header>Create a new PID</header>

<section id="pid_new">

  <div class="red">
    <% if @pid && @pid.errors %>
      <% @pid.errors.full_messages.each do | message | %>
        <%= message %></br>
      <% end %>
    <% end %>
  </div>
  
  <form action="/link" method="post">
    <label>Url: <input type="url" id="url" name="url" title="The url should include the protocol (e.g. http:// or https://)." /></label>
        
    <input type="submit" name="Create">
  </form>

</section>