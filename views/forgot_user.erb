<section id="user_forgot">
	<h3><%= form_text('header_forgotten_password') %></h3>
	
	<form action="/user/forgot" method="post">
		<label><%= form_text('form_userid') %></label><input type="text" id="login" name="login" value="<%= @login %>" />
		<label>&nbsp;</label><input type="submit" id="reset" name="reset" value="<%= form_text('button_forgotten_password') %>" />
		<label>&nbsp;</label><a class="letterpress" href="/user/login"><%= form_text('link_to_login') %></a>
	</form>
</section>

<section class="errors">
	<%= @msg %>
</section>
