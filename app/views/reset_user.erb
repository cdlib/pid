<section id="user_login">
  <h3><%= HTML_CONFIG['header_recovery'] %></h3>

  <form action="/user/reset" method="post">
    <label><%= "#{HTML_CONFIG['form_userid']} #{@login_user_id}" %></label>
    <br><br>
    <label for="password"><%= HTML_CONFIG['form_new_password'] %></label><input type="password" name="password" id="password" />
    <label for="confirm"><%= HTML_CONFIG['form_confirm_password'] %></label><input type="password" name="confirm" id="confirm" />
    <label>&nbsp;</label><input type="submit" id="submit" name="submit" value="<%= HTML_CONFIG['button_reset_password'] %>" />
    <input type="hidden" id="n" name="n" value="<%= @n %>">
    <input type="hidden" id="c" name="c" value="<%= @c %>">
  </form>
</section>

<section class="errors">
  <%= @msg %>
</section>

<script type="text/javascript">
  $("#submit").click( function(event){
    ret = validate(['password', 'confirm'], [], [], [['password', 'confirm']]);
    
    if(ret != ''){
      event.preventDefault();
      $(".errors").html(ret);
    }else{
      $(".errors").html('');
    }
  });
</script>