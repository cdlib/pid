# Whether or not the Redis DB should rebuild itself when the app restarts
rebuild_redis_on_startup: 'false'

# DB connection settings
db_adapter: 'mysql2'
db_encoding: 'utf8'
db_host: <%= ENV['DB_HOST'] %>
db_port: 3306
db_name: <%= ENV['DB_NAME'] %>
db_username: <%= ENV['DB_USERNAME'] %>
db_password: <%= ENV['DB_PASSWORD'] %>